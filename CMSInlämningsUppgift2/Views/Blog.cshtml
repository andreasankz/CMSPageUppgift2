@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Blog>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}

@{
	var blogPosts = Umbraco.Content(1073)
    .ChildrenOfType("blogPosts")
    .Where(x => x.IsVisible())
    .OrderByDescending(x => x.CreateDate);
}


<div class="blogpost-card mt-5">

    @foreach (var item in blogPosts)
    {


        <div class="d-flex justify-content-center">
            @{
                var blogImage = item.Value<IPublishedContent>("blogPostImage");
            }

            @if (blogImage != null)
            {
                <img src="@blogImage.Url()" />
            }


        </div>
        <div class="mt-4 d-flex justify-content-center">
            <h3>@item.Value("blogPostHeadline")</h3>
        </div>
        <div class="mt-5 d-flex justify-content-center">
            <p>
                @item.Value("blogPostContent")
            </p>
        </div>
        <hr class="mb-5 mt-3">


    }

</div>

